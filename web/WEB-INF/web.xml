<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee                          http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.assignment2Serv.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderController</servlet-name>
        <servlet-class>com.assignment2Serv.OrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerController</servlet-name>
        <servlet-class>com.assignment2Serv.ManagerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmailListServlet</servlet-name>
        <servlet-class>com.assignment2Serv.EmailListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/usercontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderController</servlet-name>
        <url-pattern>/ordercontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerController</servlet-name>
        <url-pattern>/managercontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmailListServlet</servlet-name>
        <url-pattern>/emaillistservlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>main.html</welcome-file>
        <welcome-file>main.jsp</welcome-file>
    </welcome-file-list>
</web-app>
